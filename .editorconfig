# http://editorconfig.org

root = true

[* *.ts, *.tsx]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double

[*.{ts,tsx}]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double

[*.md]
insert_final_newline = true
trim_trailing_whitespace = true

[package*.json]
indent_style = space
